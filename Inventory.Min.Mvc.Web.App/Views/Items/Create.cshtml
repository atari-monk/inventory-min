@model Inventory.Min.Mvc.Web.App.Models.ItemFullVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Item!.Name" class="control-label"></label>
                <input asp-for="Item!.Name" class="form-control" />
                <span asp-validation-for="Item!.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item!.Description" class="control-label"></label>
                <input asp-for="Item!.Description" class="form-control" />
                <span asp-validation-for="Item!.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item!.InitialCount" class="control-label"></label>
                <input asp-for="Item!.InitialCount" class="form-control" />
                <span asp-validation-for="Item!.InitialCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item!.CurrentCount" class="control-label"></label>
                <input asp-for="Item!.CurrentCount" class="form-control" />
                <span asp-validation-for="Item!.CurrentCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item!.CategoryId">Category</label>
                @Html.DropDownListFor(m => m.Item!.CategoryId, new SelectList(Model.Lexicons!.Categories, "Id", "Name"))
            </div>
            <div class="form-group">
                <label asp-for="Item!.PurchaseDate" class="control-label"></label>
                <input asp-for="Item!.PurchaseDate" class="form-control" />
                <span asp-validation-for="Item!.PurchaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item!.CurrencyId">Currency</label>
                @Html.DropDownListFor(m => m.Item!.CurrencyId, new SelectList(Model.Lexicons!.Currencies, "Id", "Name"))
            </div>
            <div class="form-group">
                <label asp-for="Item!.PurchasePrice" class="control-label"></label>
                <input asp-for="Item!.PurchasePrice" class="form-control" />
                <span asp-validation-for="Item!.PurchasePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
